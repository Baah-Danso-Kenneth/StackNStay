# Example .env.dev file for local development
# Copy this to .env.dev and adjust values

# FastAPI/Server
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://stackuser:stackpass@db:5432/stacknstay

# Blockchain/Stacks
STACKS_API_URL=https://testnet-api.stacks.co
STACKS_NETWORK=testnet

# AI/LLM Services
GROQ_API_KEY=your_groq_key_here
COHERE_API_KEY=your_cohere_key_here

# Vector Store
VECTOR_STORE_PATH=/app/data/vector_store

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# API Keys
API_KEY_ADMIN=your_secure_admin_key_here

# Sentry (optional error tracking)
SENTRY_DSN=

# Redis (optional, if using for caching)
REDIS_URL=redis://redis:6379/0
