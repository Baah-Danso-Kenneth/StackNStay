{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "dockerfile",
    "context": ".",
    "dockerfile": "./backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn -k uvicorn.workers.UvicornWorker -w 4 -b 0.0.0.0:$PORT --timeout 60 app.main:app",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "PORT": "8000",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  }
}
